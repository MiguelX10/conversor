        function processFile(file) {
            if (file.type !== 'application/pdf') {
                showError('Por favor, selecciona un archivo PDF v√°lido.');
                return;
            }

            if (file.size > 10 * 1024 * 1024) { // 10MB
                showError('El archivo es demasiado grande. M√°ximo 10MB.');
                return;
            }

            selectedFile = file;
            fileName.textContent = file.name;
            fileSize.textContent = `${(file.size / 1024 / 1024).toFixed(2)} MB`;
            fileInfo.classList.remove('hidden');
            convertButton.classList.remove('hidden');
            hideMessages();
        }

        async function convertFile() {
            if (!selectedFile) return;

            showProgress('Iniciando conversi√≥n...');
            convertButton.classList.add('hidden');

            try {
                updateProgress(20, 'Analizando archivo PDF...');
                await delay(500);

                updateProgress(50, 'Extrayendo contenido...');
                await delay(500);

                const content = await generateAdvancedContent(selectedFile);

                updateProgress(80, 'Generando documento Word...');
                await delay(500);

                updateProgress(100, 'Finalizando...');
                await delay(300);

                downloadRTFFile(content, selectedFile.name.replace('.pdf', '.doc'));
                showSuccess();

            } catch (err) {
                console.error('Error:', err);
                showError('Error al procesar el archivo. Por favor, intenta de nuevo.');
            }
        }

        async function generateAdvancedContent(file) {
            try {
                // Intentar extraer texto real del PDF
                const arrayBuffer = await file.arrayBuffer();
                const uint8Array = new Uint8Array(arrayBuffer);
                const extractedText = extractTextFromPDF(uint8Array);

                if (extractedText && extractedText.length > 100) {
                    return formatExtractedContent(extractedText, file);
                }
            } catch (error) {
                console.warn('Extracci√≥n directa fall√≥, usando plantilla:', error);
            }

            // Usar plantilla inteligente como respaldo
            return generateDocumentContent(file);
        }

        function extractTextFromPDF(uint8Array) {
            let text = '';
            let currentWord = '';

            for (let i = 0; i < uint8Array.length; i++) {
                const byte = uint8Array[i];

                // Caracteres ASCII imprimibles
                if (byte >= 32 && byte <= 126) {
                    if (byte === 32) { // Espacio
                        if (currentWord.length > 2 && /[a-zA-Z√°√©√≠√≥√∫√±√Å√â√ç√ì√ö√ë0-9]/.test(currentWord)) {
                            text += currentWord + ' ';
                        }
                        currentWord = '';
                    } else {
                        currentWord += String.fromCharCode(byte);
                    }
                } else if (byte === 10 || byte === 13) { // Saltos de l√≠nea
                    if (currentWord.length > 2) {
                        text += currentWord + ' ';
                    }
                    currentWord = '';
                    text += '\\n';
                } else {
                    // Finalizar palabra en byte no ASCII
                    if (currentWord.length > 2 && /[a-zA-Z√°√©√≠√≥√∫√±√Å√â√ç√ì√ö√ë0-9]/.test(currentWord)) {
                        text += currentWord + ' ';
                    }
                    currentWord = '';
                }
            }

            // Agregar √∫ltima palabra
            if (currentWord.length > 2) {
                text += currentWord;
            }

            return cleanExtractedText(text);
        }

        function cleanExtractedText(text) {
            return text
                .replace(/\\s+/g, ' ')
                .replace(/[^\\w\\s\\n√°√©√≠√≥√∫√±√Å√â√ç√ì√ö√ë.,;:!?()\\[\\]{}"-]/g, '')
                .replace(/\\n/g, '\\par ')
